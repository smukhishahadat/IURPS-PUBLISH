@model IList<IUEMS.Models.Exam.ExportExaminMarksModel>
@using System.Text.RegularExpressions;
@{
    /**/

    Layout = "~/Views/Shared/_PdfLayout.cshtml";
}

<table style="background-color: white; width: 100%;" class="table">
    <thead>
        <tr>
            <th style="border: 1px solid black; text-align: left; width: 20%; padding-left: 20px;">
                Student ID
            </th>
            <th style="border: 2px solid black; text-align: center; width: 20%">
                Internal Marks
            </th>
            <th style="border: 2px solid black; text-align: center; width: 20%">
                First Examiner
            </th>
            <th style="border: 2px solid black; text-align: center; width: 20%">
                Second Examiner
            </th>
            <th style="border: 2px solid black; text-align: center; width: 20%">
                Third Examiner
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var itm in Model)
        {
            <tr>
                <td style="padding-left: 20px;">
                    @Html.DisplayFor(m => itm.STUDENT_ID)
                </td>
                <td style="padding-left: 20px;">
                    @Html.DisplayFor(m => itm.INTERNAL_MARKS)
                </td>
                <td style="padding-left: 20px;">
                    @Html.DisplayFor(m => itm.FIRST_EXAMINER_MARKS)
                </td>
                <td style="padding-left: 50px;">
                    Second Examiner Marks
                </td>
                <td style="padding-left: 50px;">
                    Third Examier Marks
                </td>
            </tr>
        }
    </tbody>
</table>
<link rel="stylesheet" media="screen" href="https://fontlibrary.org/face/idautomationhc39m-code-39-barcode" type="text/css" />
<style type="text/css">
    #barcode {
        font-family: 'IDAHC39MCode39BarcodeRegular';
        font-weight: normal;
        font-style: normal;
    }
</style>
<img src="@ViewBag.qr_img" />

@model IUMS.Entities.HALL
@{
	Layout = null;
}

<div class="modal" id="modal" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class='row'>
				<div class="modal-header">
					<div class="col-md-10">
						<h3>Hall Details</h3>
					</div>
					<div class="col-md-2">
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
				</div>
			</div>
			<div class="modal-body">
				<table class="table table-striped table-hover table-bordered">
					
					<tbody>
						
						<tr>
							<td>@Html.DisplayNameFor(model => model.HALL_CODE)</td>
							<td>@Html.DisplayFor(model => model.HALL_CODE)</td>
						</tr>
						<tr>
							<td>@Html.DisplayNameFor(model => model.HALL_NAME)</td>
							<td>@Html.DisplayFor(model => model.HALL_NAME)</td>
						</tr>
						
						<tr>
							<td>@Html.DisplayNameFor(model => model.STATUS)</td>
							<td>@Html.DisplayFor(model => model.STATUS)</td>
						</tr>
					</tbody>
				</table>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-primary pull-right" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>

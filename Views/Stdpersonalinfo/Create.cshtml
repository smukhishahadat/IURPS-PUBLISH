@model IUMS.Entities.ACADEMIC_STUDENT_PERSONAL
@{
	Layout = null;
}

<div class="modal" id="modal" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			@{string ajaxPostUrl = Url.Action("Create", null, null, Request.Url.Scheme);}
			@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form", ajaxPostUrl = ajaxPostUrl }))
			{
				@Html.AntiForgeryToken()				
				<div class="modal-header">
					<div class="col-md-10">
						<h3>Add New Student</h3>
					</div>
					<div class="col-md-2">
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
				</div>
				<div class="modal-body">
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })

					<table class="table table-striped table-hover table-bordered">
						
                        <tbody>

                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.STUDENT_ID, htmlAttributes: new { @class = "control-label col-md-12" })
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.STUDENT_ID, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.STUDENT_ID, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.FULL_NAME, htmlAttributes: new { @class = "control-label col-md-12" })
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.FULL_NAME, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.FULL_NAME, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.ROLL, htmlAttributes: new { @class = "control-label col-md-12" })
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.ROLL, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ROLL, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.REG_NO, htmlAttributes: new { @class = "control-label col-md-12" })
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.REG_NO, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.REG_NO, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.MOBILE_NO, htmlAttributes: new { @class = "control-label col-md-12" })
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.MOBILE_NO, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.MOBILE_NO, "", new { @class = "text-danger" })
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.EMAIL, htmlAttributes: new { @class = "control-label col-md-12" })
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.SESSION_ID, htmlAttributes: new { @class = "control-label col-md-12" })
                                </td>
                                <td>
                                    @Html.DropDownList("SESSION_ID", (IEnumerable<SelectListItem>)ViewData["aca_session"], "Select Session", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.SESSION_ID, "", new { @class = "text-danger" })
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.PROGRAM_TYPE, htmlAttributes: new { @class = "control-label col-md-12" })
                                </td>
                                <td>
                                    @Html.DropDownList("PROGRAM_TYPE", (IEnumerable<SelectListItem>)ViewData["program_type"], "Program Type", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.PROGRAM_TYPE, "", new { @class = "text-danger" })
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.FACULTY_ID, htmlAttributes: new { @class = "control-label col-md-12" })
                                </td>
                                <td>
                                    @Html.DropDownList("FACULTY_ID", (IEnumerable<SelectListItem>)ViewData["faculty_list"], "Select Faculty", new { @class = "form-control FACULTY_ID" })
                                    @Html.ValidationMessageFor(model => model.FACULTY_ID, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.DEPARTMENT_ID, htmlAttributes: new { @class = "control-label col-md-12" })
                                </td>
                                <td>
                                    @Html.DropDownList("DEPARTMENT_ID", Enumerable.Empty<SelectListItem>(), "Select Department", new { @class = "form-control DEPARTMENT_ID" })
                                    @Html.ValidationMessageFor(model => model.DEPARTMENT_ID, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.PROGRAM_ID, htmlAttributes: new { @class = "control-label col-md-12" })
                                </td>
                                <td>
                                    @Html.DropDownList("PROGRAM_ID", Enumerable.Empty<SelectListItem>(), "Select Program", new { @class = "form-control PROGRAM_ID" })
                                    @Html.ValidationMessageFor(model => model.PROGRAM_ID, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.YEAR, htmlAttributes: new { @class = "control-label col-md-12" })
                                </td>
                                <td>
                                    @Html.DropDownList("YEAR", (IEnumerable<SelectListItem>)ViewData["exam_year"], "Select Year", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.YEAR, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.HALL_ID, htmlAttributes: new { @class = "control-label col-md-12" })
                                </td>
                                <td>
                                    @Html.DropDownList("HALL_ID", (IEnumerable<SelectListItem>)ViewData["hall"], "Select Hall", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.HALL_ID, "", new { @class = "text-danger" })
                                </td>
                            </tr>

                        </tbody>
					</table>				
				</div>
				<div class="modal-footer">
                    <button type="button" class="btn btn-success" onclick="formValidSend()">Create</button>
                    <button type="button" class="btn btn-primary pull-right" data-dismiss="modal">Close</button>
				</div>
			}
		</div>
	</div>
</div>
